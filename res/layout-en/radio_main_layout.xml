<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fm_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/fm_single"
            android:textSize="30sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favbtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:src="@drawable/radio_fm_like_btn_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/freq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:textColor="#12DCFD"
                android:textSize="80sp"
                android:text="@string/fm_defaultefreq"
                android:width="220dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:text="@string/fm_unit"
                android:textColor="#12DCFD"
                android:textSize="30sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fm_top_scale" 
        >
        
    <SeekBar
        android:id="@+id/seekBar_radio_freq"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:max="1000"
        android:progress="500"
        android:progressDrawable="@drawable/radio_freq_seekbar_style"
        android:thumb="@drawable/fm_top_pointer"
        android:thumbOffset="0dp" />
        
    </RelativeLayout>
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >

    <HorizontalScrollView
        android:id="@+id/favscrollview"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp" >

        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/scrolllinear"
	        android:orientation="horizontal" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="55dp"
	            android:layout_marginTop="25dp"
	            android:background="@drawable/radio_fm__btn_selector"
	            android:gravity="center"
	            android:visibility="gone"
	            android:orientation="vertical" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/fm_defaultefreq"
	                android:textColor="#12DCFD"
	                android:textSize="30sp" />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/fm_single"
	                android:textSize="30sp" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginTop="25dp"
	            android:background="@drawable/radio_fm__btn_selector"
	            android:gravity="center"
	            android:visibility="gone"
	            android:orientation="vertical" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/fm_defaultefreq"
	                android:textColor="#12DCFD"
	                android:textSize="30sp" />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/fm_single"
	                android:textSize="30sp" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginTop="25dp"
	            android:background="@drawable/radio_fm__btn_selector"
	            android:gravity="center"
	            android:visibility="gone"
	            android:orientation="vertical" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/fm_defaultefreq"
	                android:textColor="#12DCFD"
	                android:textSize="30sp" />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/fm_single"
	                android:textSize="30sp" />
	        </LinearLayout>
	    </LinearLayout>
    </HorizontalScrollView> 
  
         <ImageButton 
     	android:id="@+id/ib_fm_close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fm_like_bar"
       	android:layout_marginTop="139dp"
        android:layout_gravity="center_horizontal"
        /> 

    
         <ImageButton 
     	android:id="@+id/ib_fm_close"
        android:layout_width="400dp"
        android:layout_height="50dp"     
        android:layout_marginTop="80dp"  
        android:alpha="0"
        android:layout_marginLeft="100dp"
        android:background="@drawable/fm_like_bar"
        android:layout_gravity="center_vertical"
        /> 
  <ImageButton 
       android:id="@+id/ll_fm_banzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fm_banzi"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:visibility="gone"
       />
          
    </FrameLayout>
   


</LinearLayout>