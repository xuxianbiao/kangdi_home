<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/musiclistbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@null"
        android:src="@drawable/music_list2_btn_selector" />

    <ImageButton
        android:id="@+id/equalizerbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:src="@drawable/music_junhen_btn_selector"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/favbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/include1"
        android:layout_marginLeft="50dp"
        android:background="@null"
        android:src="@drawable/music_love2_btn_selector"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_blue_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/include1"
        android:layout_marginLeft="50dp"
        android:background="@drawable/toggle_selector"
        android:textColor="@color/white"
        android:textOff=""
        android:textOn="" />

    <ImageButton
        android:id="@+id/playmodebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/include1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:src="@drawable/music_singlexunhuan_btn_selector" />

    <include
        android:id="@+id/include1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        layout="@layout/music_box_layout" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="0dp"
        layout="@layout/music_cotent_layout" />

    <ImageView
        android:id="@+id/blue_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_blue_music"
        android:layout_alignLeft="@+id/btn_blue_music"
        android:layout_marginLeft="8dp"
        android:src="@drawable/bluetooth_music" />

</RelativeLayout>