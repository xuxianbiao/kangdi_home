<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/kmicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/home_tophalf_icon_km" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="480dp"
        android:layout_marginTop="50dp" >

        <ImageButton
            android:id="@+id/kmnum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_5" />

        <ImageButton
            android:id="@+id/kmnum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_5" />

        <ImageButton
            android:id="@+id/kmnum3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_5" />

        <ImageButton
            android:id="@+id/kmtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_km" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/energyicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/home_tophalf_icon_energy_5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="50dp" >

        <ImageButton
            android:id="@+id/percentno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_2" />

        <ImageButton
            android:id="@+id/percentno2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_5" />

        <ImageButton
            android:id="@+id/percentno3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_5" />

        <ImageButton
            android:id="@+id/percenticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/home_tophalf_kmh_charge" />
    </LinearLayout>

</RelativeLayout>